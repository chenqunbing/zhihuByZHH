/* //导航栏tab切换 */
@import "../index/index-template/index-template.wxss";

.swiper-tab{
  width: 100%;
  line-height: 80rpx;
  border-bottom: 2px solid #fff;
  background-color: #288DE5;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.swiper-tab-list{
  display: inline-block;
  width: 25%;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
.swiper-box{
  background-color: gainsboro;
  width: 100%; 
  height: 100%;  
    /* display: block;   */
   /* overflow: hidden;   */
}
.swiper-box view{
  text-align: center;
}
.on{
  color: #fff;  
  font-weight: bold;
  border-bottom: 5rpx solid #fff;
}

/* 推荐页面 */
.tuijian-container{
  margin-top: 80rpx;
}
.tuijian-container swiper{
  width: 100%;
  height: 300rpx;
}
.tuijian-container swiper image{
  width: 100%;
}