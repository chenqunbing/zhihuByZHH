<view class='detail-container'>
  <view class='title'>
    <text>{{per_article_data.article_title}}</text>
  </view>
  <view class='authour'>
    <image src='{{per_article_data.avatar}}'></image>
    <view class='introduce'>
      <text>{{per_article_data.name}}</text>
      <text>{{per_article_data.introduce}}</text>
    </view>
     <button wx:if='{{focusedValue}}' class='focus' catchtap='focusedTap'>已关注</button>
    <button wx:else class='focus' catchtap='focusedTap'>+关注</button>
   
  </view>
  <text class='content'>{{per_article_data.detail_content}}</text>
  <image class='content_img' src='{{per_article_data.content_img}}'></image>
  <text class='content last'>{{per_article_data.detail_content}}</text>


  <view class='bottomBanner'>
    <view class='box_container'>
      <image src='/images/good-bad.png'></image>
      <text>2.1K</text>
    </view>
    <view class='box_container'>
      <image src='/images/flag.png'></image>
      <text>没有帮助</text>
    </view>
    <view class='box_container'>
      <image src='/images/heart2.png'></image>
      <text>感谢</text>
    </view>
    <view class='box_container'>
      <image src='/images/star2.png'></image>
      <text>收藏</text>
    </view>
    <view class='box_container'>
      <image src='/images/comment.png'></image>
      <text>302</text>
    </view>
  </view>
</view>