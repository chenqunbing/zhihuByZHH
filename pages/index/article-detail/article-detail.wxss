.detail-container{
  display: flex;
  flex-direction: column;
}
.title{
  height: 300rpx;
  background-color:  #2a8de5;

}
.title text{
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  position: absolute;
  top: 80rpx;
  left: 20rpx;
}
.authour{
  display: flex;
  flex-direction: row;
  width: 660rpx;
  height: 150rpx;
  position: absolute;
  top: 210rpx;
  left: 15rpx;
  z-index: 10;
  background-color: #fff;
  padding: 25rpx;
  box-shadow: 10px 10px 5px #888888;
}
.authour image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.introduce{
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}
.introduce text:nth-of-type(1){
  font-size: 24rpx;
  font-weight: bold;
}
.introduce text:nth-of-type(2){
  font-size: 24rpx;
  color: #666;
}
.content:nth-of-type(1){
  margin-top: 200rpx;
}
.focus{
  width: 150rpx;
  height: 70rpx;
  border: 1px solid #2a8de5;
  font-size: 24rpx;
  color: #2a8de5;
}
.content{
  font-size: 24rpx;
  color: #666;
  padding: 28rpx;
}
.last{
 margin-bottom: 120rpx;
}
.content_img{
  width: 100%;
  height: 300rpx;
}

/* bottomBanner */
.bottomBanner{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  width: 100%;
  border-top: 2px solid #666;
}
.box_container{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.box_container:nth-of-type(1){
  width: 100rpx;
  height: 80rpx;
  border: 1px solid #666;
  margin-left: 20rpx;
  margin-top: 13rpx;
}
.box_container:nth-of-type(1) image{
  margin-left: 20rpx;
}
.box_container:nth-of-type(1) text{
  margin-left: 20rpx;
}
.box_container image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 80rpx;
  margin-top: 15rpx;
}
.box_container text{
  font-size: 24rpx;
  color: #666;
  margin-left: 60rpx;
}