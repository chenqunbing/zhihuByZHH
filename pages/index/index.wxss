@import 'index-template/index-template.wxss';
/* 头部收索框 */
.index-container{
  display: flex;
  flex-direction: column;
  background-color:#F0F0F0;
}
.search-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #2a8de5;
}

.search-container icon {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  z-index: 4;
}

.search-container input {
  width: 74%;
   height: 80rpx; 
  position: absolute;
  top: 10rpx;
  background-color: #4ea3e7;
  margin-left: 20rpx;
  padding-left: 60rpx;
  
}

.search-container image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 15rpx;
  right: 25rpx;
}

.placeholder {
  font-size: 28rpx;
}

