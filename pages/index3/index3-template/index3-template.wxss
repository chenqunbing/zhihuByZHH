.index3-container{
  display: flex;
  flex-direction: row;
  padding:15rpx;
  border-bottom: 1rpx solid #666;
  position: relative;
}

.people{
  display: flex;
  flex-direction: column;
  margin: 10rpx;
}
.people text:nth-of-type(1){
  font-weight: bold;
  font-size: 32rpx;
}
.people text:nth-of-type(2){
  color: #666;
  font-size: 32rpx;
}
.time{
  font-size: 28rpx;
  position: absolute;
  top: 10rpx;
  right: 30rpx;
}
.index3-container image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}